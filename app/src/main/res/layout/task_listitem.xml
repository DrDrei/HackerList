<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/imagebutton_taskplay" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkbox_task"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_tasktime"
            android:layout_centerVertical="true"
            android:textSize="@dimen/taskitem_textsize"
            android:layout_toStartOf="@+id/imagebutton_taskplay" />

        <TextView
            android:text="test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_tasktitle"
            android:textSize="@dimen/taskitem_textsize"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/checkbox_task" />

    </RelativeLayout>
</LinearLayout>